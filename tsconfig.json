{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"strict": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react",
		"baseUrl": ".",
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"react-dom": ["./node_modules/@hot-loader/react-dom"]
		}
	},
	"include": ["src"],
	"exclude": ["src/**/*.test.ts", "src/**/*.test.tsx"]
}
